<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_card"
    style="@style/style_card_view">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/qb_16dp"
        android:paddingRight="@dimen/qb_16dp">

        <com.indianic.qbchat.comman.QbCustomTextViewMedium
            android:id="@+id/tv_dialog_firs_latter"
            android:layout_width="@dimen/qb_40dp"
            android:layout_height="@dimen/qb_40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/qb_16dp"
            android:background="@drawable/shape_rectangle"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/qb_16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.indianic.qbchat.comman.QbCustomTextViewMedium
                android:id="@+id/text_dialog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/qb_16sp"
                 />

            <com.indianic.qbchat.comman.QbCustomTextViewMedium
                android:id="@+id/text_dialog_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/qb_14sp"
                 />
        </LinearLayout>

        <com.indianic.qbchat.comman.QbCustomTextViewMedium
            android:id="@+id/text_dialog_unread_count"
            android:layout_width="@dimen/qb_20dp"
            android:layout_height="@dimen/qb_20dp"
             android:layout_marginLeft="@dimen/qb_16dp"
            android:background="@drawable/shape_rectangle"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:visibility="visible"
            tools:text="4" />

    </LinearLayout>
</android.support.v7.widget.CardView>