<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/qb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_58dp"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.indianic.qbchat.comman.QbCustomTextViewMedium
            android:id="@+id/qb_chat_tv_title"
            style="@style/AppTheme.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/messages"
            android:lineSpacingExtra="@dimen/qb_3dp"
            android:textColor="@color/text_color_white" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
